<h1>Edit</h1>
<form method="POST" action="/recipes/edit/<%= recipe._id %>" enctype="multipart/form-data">
    <div>
        <input type="text" name="name" class="form-control" placeholder="Recipe name" value="<%= recipe.name%>">
        <% if (typeof(error) != 'undefined' && error.name) { %>
        <label class="control-label"> 
            <%= error.name %> 
        </label>
        <% } %>
    </div>
    <div>
        <input type="text" name="description" class="form-control" placeholder="Recipe description" value="<%= recipe.description%>">
        <% if (typeof(error) != 'undefined' && error.description) { %>
        <label class="control-label"> 
            <%= error.description %> 
        </label>
        <% } %>
    </div>
    <div>
        <textarea rows="4" name="directions" class="form-control" placeholder="Step by step directions"><%= recipe.directions %></textarea>
        <% if (typeof(error) != 'undefined' && error.directions) { %>
        <label class="control-label"> 
            <%= error.directions %> 
        </label>
        <% } %>
    </div>
    <div>   
            <% var ingredients = []; %>
            <% recipe.ingredients.forEach(ing => { %>
            <% ingredients.push(ing.ingredient) %>
            <% })%>
            <input type="text" name="ingredients" class="form-control" placeholder="Ingredients (separate by ,)" value="<%= ingredients %>">
            <% if (typeof(error) != 'undefined' && error.description) { %>
            <label class="control-label"> 
                <%= error.description %> 
            </label>
            <% } %>
    </div>
    <div>
            <input type="file" name="img" class="form-control" title="Images" multiple>
            <% if (typeof(error) != 'undefined' && error.imgs) { %>
            <label class="control-label"> 
                <%= error.imgs %> 
            </label>
            <% } %>
    </div>
    <div class="form-actions">
            <button type="submit" class="btn btn-block btn-primary">Save changes</button>
    </div>
</form>