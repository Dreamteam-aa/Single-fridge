<h1>New recipe</h1>
<form method="POST" action="/recipes/create" enctype="multipart/form-data">
    <div>
        <input type="text" name="name" class="form-control" placeholder="Recipe name">
        <% if (typeof(error) != 'undefined' && error.name) { %>
        <label class="control-label"> 
            <%= error.name %> 
        </label>
        <% } %>
    </div>
    <div>
        <input type="text" name="description" class="form-control" placeholder="Recipe description">
        <% if (typeof(error) != 'undefined' && error.description) { %>
        <label class="control-label"> 
            <%= error.description %> 
        </label>
        <% } %>
    </div>
    <div>
            <input type="text" name="ingredients" class="form-control" placeholder="Ingredients (separate by ,)">
            <% if (typeof(error) != 'undefined' && error.description) { %>
            <label class="control-label"> 
                <%= error.description %> 
            </label>
            <% } %>
    </div>
    <div>
            <textarea rows="4" name="directions" class="form-control" placeholder="Step by step directions"></textarea>
            <% if (typeof(error) != 'undefined' && error.directions) { %>
            <label class="control-label"> 
                <%= error.directions %> 
            </label>
            <% } %>
    </div>
    <div>
            <input type="file" name="img" class="form-control" title="Images">
            <% if (typeof(error) != 'undefined' && error.img) { %>
            <label class="control-label"> 
                <%= error.img %> 
            </label>
            <% } %>
    </div>
    <div class="form-actions">
            <button type="submit" class="btn btn-block btn-primary">Create</button>
    </div>
</form>