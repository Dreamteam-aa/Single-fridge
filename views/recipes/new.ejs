<form method="POST" action="/recipes/create">
    <div>
        <input type="text" name="name" class="form-control" placeholder="Recipe name">
        <% if (typeof(error) != 'undefined' && error.name) { %>
        <label class="control-label"> 
            <%= error.name %> 
        </label>
        <% } %>
    </div>
    <div>
        <input type="text" name="description" class="form-control" placeholder="Recipe description">
        <% if (typeof(error) != 'undefined' && error.description) { %>
        <label class="control-label"> 
            <%= error.description %> 
        </label>
        <% } %>
    </div>
    <div>
            <input type="text" name="ingredients" class="form-control" placeholder="Ingredients (separate by ,)">
            <% if (typeof(error) != 'undefined' && error.description) { %>
            <label class="control-label"> 
                <%= error.description %> 
            </label>
            <% } %>
        </div>
</form>